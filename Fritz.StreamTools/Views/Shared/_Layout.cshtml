<!doctype html>
<html lang="en">
<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<title>Tools for Streamers by Streamers</title>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link rel="stylesheet" href="~/css/site.css" />
		@RenderSection("styles", false)
</head>
<body>
		<header>
				<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
						<a class="navbar-brand" href="/">Fritz Stream Tools</a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
						</button>

						<div class="collapse navbar-collapse">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item" is-active-route asp-controller="Home" asp-action="Index">
									<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
								</li>
								<li class="nav-item dropdown" is-active-route asp-controller="Followers">
									<a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Follower Goal</a>
									<div class="dropdown-menu" aria-labelledby="dropdown01">
										<a class="dropdown-item" asp-controller="Followers" asp-action="GoalConfigurationAction">Configuration</a>
										<a class="dropdown-item" asp-controller="Followers" asp-action="Goal">Documentation</a>
									</div>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-page="/CurrentViewers">Current Viewers</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-controller="Attention" asp-action="TestClient">Attention Test</a>
								</li>
							</ul>
						</div>
				</nav>
		</header>

		<main role="main" class="container">
				@RenderBody()
		</main>

		@await Html.PartialAsync("_Footer")

		<script src="~/lib/jquery.js"></script>

		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
		@RenderSection("scripts", false)

</body>
</html>
